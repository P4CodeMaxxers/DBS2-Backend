# Add this location block inside the HTTPS server { } block for dbs2.opencodingsociety.com
# (the one with "listen 443 ssl" and ssl_certificate). Without it, wss://dbs2.../dbs2-ws returns 404.
#
# Example: if your HTTPS config is in /etc/nginx/sites-enabled/dbs2.opencodingsociety.com,
# add this before the "location /" block.

    location /dbs2-ws {
        proxy_pass http://localhost:8765/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_read_timeout 86400;
    }
